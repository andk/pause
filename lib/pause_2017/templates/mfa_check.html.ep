% layout 'layout';
% my $pause = stash(".pause") || {};

<p>Authentication code</p>
%= text_field 'otp';

% for my $name (@{ $c->req->params->names }) {
  % for my $value (@{ $c->req->every_param($name) }) {
    % next if $name eq 'ACTION';
    % next if $name eq 'otp';
    %= hidden_field $name => $value;
  % }
% }

%= submit_button 'verify';

